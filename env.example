# ============================================
# API 서버 설정
# ============================================
# API 서버 URL (예: https://domain.com)
API_URL={sample_api_url}

# ============================================
# 인증 설정
# ============================================
# 접근 토큰 (API 호출 시 사용)
ACCESS_TOKEN={sample_token}

# ============================================
# 로깅 설정
# ============================================
# 로그 레벨: info(에러 위주) | debug(요청/응답 모두)
# 기본값: info
LOG_MODE=info

# 로그 형식: json | pretty
# 기본값: json
LOG_FORMAT=json

# JSON/pretty 모두 본문 출력 길이 제한 (문자 수). 0이면 무제한
# 기본값: 0
LOG_MAX_BODY=0

# 민감한 정보 표시 여부: true면 Authorization/Cookie/x-api-key 마스킹 해제
# 기본값: false
LOG_SHOW_SENSITIVE=false

# 로거 자동 부트스트랩 on/off (Vitest에서 자동 장착)
# 오케스트레이터를 쓰면 false 권장
LOG_AUTOWRAP=false

# ============================================
# 인증 헤더 자동 주입 설정 (axios-bearer-auth)
# ============================================
# axios Bearer 토큰 자동 주입(auto-wrap) on/off
# 오케스트레이터를 쓰면 false 권장
AUTH_AUTOWRAP=false
